@model Status

@switch (Model)
{
    case Status.None:
        <span class="badge badge-primary">İşlem Yapılmadı</span>
        break;
    case Status.Active:
        <span class="badge badge-success">Aktif</span>
        break;
    case Status.Deleted:
        <span class="badge badge-danger">Pasif</span>
        break;
    case Status.Updated:
        <span class="badge badge-warning">Güncellendi</span>
        break;
}
